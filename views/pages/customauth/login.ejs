<style>
  html,
  body {
    height: 100%;
    width: 100%;
    margin: 0;
  }
  body,
  body {
    display: flex;
    font-family: Arial, Helvetica, sans-serif;
  }
  form,
  div {
    margin: auto;
    display: flex;
    flex-direction: column;
  }
  .titlelogin {
    text-align: center;
    margin-bottom: 26px;
    font-weight: bold;
    font-size: 17px;
  }
  .titleSignup {
    font-size: 12px;
    text-align: center;
    margin-top: 16px;
  }
  input {
    padding: 12px;
    font-size: 14px;
    margin-bottom: 12px;
    border-radius: 6px;
    border: solid 1px rgb(215, 215, 215);
    width: 250px;
  }
  button {
    background-color: dodgerblue;
    font-size: 14px;
    font-weight: bold;
    color: white;
    padding: 12px;
  }
</style>
<script>
  async function handleLogin() {
    console.log("Trying to login...");

    const email = document.getElementById("email").value;
    const password = document.getElementById("password").value;

    const formData = new FormData();
    formData.append("emailAddress", email);
    formData.append("password", password);

    try {
      await axios.put("/api/v1/entrance/login", formData);
      document.location = "/post";
    } catch (err) {
      console.log("Error login page:" + err.toString());
      const error = "All fields must be entered.";
      document.getElementById("errorMessage").innerHTML = error;
    }
  }
</script>
<div>
  <div style="justify-content: center; margin-bottom: 26px">
    <img src="/images/custom-login-logo.png" width="250px" alt="" />
  </div>
  <div
    style="
      background-color: white;
      padding: 24px;
      border-radius: 6px;
      width: 300px;
    "
  >
    <label class="titlelogin">Log into your account</label>
    <form>
      <input id="email" name="emailAddress" id="" placeholder="Email" />
      <input
        id="password"
        name="password"
        id=""
        placeholder="Password"
        type="password"
      />
      <button type="button" onclick="handleLogin()">Login</button>
      <div id="errorMessage" style="color: red"></div>
    </form>
    <label for="" class="titleSignup">
      Don't have an account?
      <a href="/signup">Sign up</a>
    </label>
  </div>
</div>
